<configuration>

	<property name="LOG_ROOT" value="/opt/logs/es" />
	<property name="LOG_FILENAME" value="compute-service" />
	<property name="LOG_MAXFILESIZE" value="50MB" />
	<property name="LOG_PATTERN"
		value="%date{ISO8601} %-5level [%thread] %class.%method\\(%line\\) - %msg%n" />

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>${LOG_PATTERN}</pattern>
		</encoder>
	</appender>

	<appender name="RFA"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_ROOT}/${LOG_FILENAME}.log</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_ROOT}/${LOG_FILENAME}-%d{yyyyMMdd}-%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>${LOG_MAXFILESIZE}</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>

		<encoder class="net.logstash.logback.encoder.LogstashEncoder">
		</encoder>
	</appender>

	<appender name="STASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
		<destination>172.23.111.13:60364</destination>

		<encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
			<providers>
				<mdc />
				<context />
				<logLevel />
				<loggerName />
				<pattern>
					<pattern>
						{
						"serviceName": "compute-service"
						}
					</pattern>
				</pattern>

				<threadName />
				<message />
				<logstashMarkers />
				<stackTrace />
			</providers>
		</encoder>
	</appender>

	<logger name="org.springframework" level="info" />
	<logger name="org.apache.commons" level="info" />
	<logger name="org.apache.http" level="info" />
	<logger name="springfox.documentation" level="info" />
	<logger name="com.netflix" level="info" />
	<logger name="org.apache.kafka.clients" level="info" />
	<logger name="org.mongodb.driver" level="info" />

	<logger name="com.cusc" level="info" />

	<root level="debug">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="RFA" />
        <appender-ref ref="STASH" />
	</root>

</configuration>